Set<Integer> allowedDays = new HashSet<>();
        if (dayOfWeekNode != null && dayOfWeekNode.isArray()) {
            for (JsonNode day : dayOfWeekNode) {
                allowedDays.add(day.asInt());
            }
        } else {
            System.out.println("dayOfWeekNode is null or not an array");
        }

        return allowedDays;

    } catch (Exception e) {
        e.printStackTrace();
        return new HashSet<>(); // Return an empty set in case of error
    }
