try {
        ObjectMapper objectMapper = new ObjectMapper();
        JsonNode rootNode = objectMapper.readTree(validationMetaData);
        JsonNode dayOfWeekNode = rootNode.path("dayOfWeek");

        Set<Integer> allowedDays = new HashSet<>();
        if (dayOfWeekNode.isArray()) {
            for (JsonNode day : dayOfWeekNode) {
                allowedDays.add(day.asInt());
            }
        }

        return allowedDays;

    } catch (Exception e) {
        e.printStackTrace();
        return new HashSet<>(); // Return an empty set in case of error
    }
